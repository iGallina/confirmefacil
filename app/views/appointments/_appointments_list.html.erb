<table id="appoint_table">
<% unless @appointments.nil? %>
	<tr>
		<th>Cliente</th>
		<th>Data</th>
		<th>Confirmação</th> 
		<th>Opções</th>
	</tr>
	<% @appointments.each do |appointment| %>
	 <tr>
	    <td><%= appointment.client %></td>
	    <td><%= appointment.date.strftime("%d/%m/%Y") %></td>
	    <td><%= appointment.status %></td>
	    <td>
		<%= link_to '[remover]', appointment, :method=>'delete', :remote=>true%>&nbsp;
	    </td>
	 </tr>
	<% end %>
<% else %>
	<tr>
		<td colspan="3"><center>Não há consultas cadastradas.</center></td>
	</tr>
<% end %>
<tr>
	<td colspan="4">
		<%= will_paginate @appointments, :prev_label=>"anterior",  :next_label=>"próximo", :params=>{:page1=>1}  %>
	</td>
</tr>
</table>
