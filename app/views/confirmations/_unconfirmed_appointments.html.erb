<table class="content" style="width:517px;">
	<tr>
		<td colspan="4">Hoje <%=Date.today.strftime('%d/%m')%>,</td>
	</tr>

	<% if not @unconfirmed_appointments.nil? and @unconfirmed_appointments.size > 0 %>
		<% @unconfirmed_appointments.each do |appointment| %>	
		   <tr>
				<td>
					<%= appointment.doctor %>
				</td>
				<td>
					<%= appointment.date.strftime('%H:%M') %>
				</td>
				<td>
					<%= appointment.client %>
				</td>
				<td>
					<%= appointment.status %>
				</td>
			</tr>
		<% end %>
	<% else %>
		<tr>
			<td colspan="4">nenhuma consulta estÃ¡ pendente.</td>
		</tr>
	<% end %>

</table>




